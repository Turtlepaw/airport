{
  "tasks": {
    "postinstall": "rm -rf node_modules/.deno/better-sqlite3@10.1.0 && ln -sf ../libsql@0.15.12 node_modules/.deno/better-sqlite3@10.1.0",
    "check": "deno fmt --check . && deno lint . && deno check **/*.ts && deno check **/*.tsx",
    "dev": "deno run -A --env --watch=static/,routes/ dev.ts",
    "build": "deno run -A dev.ts build",
    "start": "deno run -A main.ts",
    "update": "deno run -A -r jsr:@fresh/update .",
    "test": "node --experimental-strip-types ./tests/e2e/migration.test.ts"
  },
  "lint": {
    "rules": {
      "tags": ["fresh", "recommended"]
    }
  },
  "exclude": ["**/_fresh/*"],
  "imports": {
    "@atproto/api": "npm:@atproto/api@^0.15.6",
    "@atproto/identity": "npm:@atproto/identity@^0.4.8",
    "@bigmoves/atproto-oauth-client": "jsr:@bigmoves/atproto-oauth-client@^0.2.0",
    "@knotbin/posthog-fresh": "jsr:@knotbin/posthog-fresh@^0.1.3",
    "clsx": "npm:clsx@^2.1.1",
    "fresh": "jsr:@fresh/core@^2.0.0-alpha.59",
    "@fresh/plugin-tailwind": "jsr:@fresh/plugin-tailwind@^0.0.1-alpha.9",
    "posthog-js": "npm:posthog-js@1.120.0",
    "preact": "npm:preact@^10.26.6",
    "@preact/signals": "npm:@preact/signals@^2.0.4",
    "@atproto/crypto": "npm:@atproto/crypto@^0.4.4",
    "@did-plc/lib": "npm:@did-plc/lib@^0.0.4",
    "@b-fuze/deno-dom": "jsr:@b-fuze/deno-dom@^0.1.52",
    "tailwindcss": "npm:tailwindcss@^4.1.12"
  },
  "compilerOptions": {
    "lib": [
      "dom",
      "dom.asynciterable",
      "dom.iterable",
      "deno.ns",
      "deno.unstable"
    ],
    "jsx": "precompile",
    "jsxImportSource": "preact",
    "jsxPrecompileSkipElements": ["a", "img", "source", "body", "html", "head"],
    "types": ["node"]
  },
  "unstable": ["kv", "otel"]
}
